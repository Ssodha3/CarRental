@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
    <head>
        <title>
            @ViewData["Title"]
        </title>
    <style>
        .navbar-nav {
            display: flex;
            align-items: center;
        }

        .nav-item {
            margin-right: 20px; 
        }

        h2 {
            text-align: center;
        }

        .car-container {
            display: grid;
            grid-template-columns: repeat(3, 1fr); 
            gap: 20px; 
        }

        .car {
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
        }

        .car img {
             width: 100%;
             height: 200px; 
             object-fit: cover;
             border-radius: 10px 10px 0 0;
        }

        .car-details {
            padding: 20px;
            background-color: #f9f9f9;
            max-height: 200px;
            overflow-y: auto;
        }

        .car p {
                margin: 10px 0;
        }
    </style>
</head>
    <body>
        <!--menu for form n home page-->
        <div class="container">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/ReservationForm">Reservation Form</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>

        <h2> Rental Cars</h2>
        <!--list of cars shown-->
        <div class="container car-container">
        @foreach(var car in Model.cars)
        {
            <div class="car">
                <img src="@car.imgSet" alt="@car.Model" class="car-image"/>
                <div class="car-details">
                    <p>@car.Brand - @car.Model</p>
                    <p>@car.Description</p>
                    <p>Rent: @car.Price</p>

                    <!--add when not available-->
                    @if (!car.Available)
                    {
                        <p>Sorry it's already booked'</p>
                    }
                </div>
            </div>
        }
        </div>
    </body>
</html>
